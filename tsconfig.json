{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@cloudflare/workers-types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
