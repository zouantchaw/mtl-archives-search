{
  "name": "mtl-archives-search-monorepo",
  "version": "0.3.0",
  "private": true,
  "description": "Semantic and visual search for Montreal city archives.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "deploy": "npm run deploy --workspace=apps/api"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "wrangler": "^4.53.0",
    "@types/node": "^22.0.0"
  },
  "engines": {
    "node": ">=23.5.0"
  },
  "author": "zouantchaw",
  "license": "MIT"
}